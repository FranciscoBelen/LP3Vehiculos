@page "/VehiculoView"

<PageTitle>Weather forecast</PageTitle>

@using Vehiculo20201061.Data
@inject WeatherForecastService ForecastService



<p>Rentamos y compramos vehiculos usados</p>
<h1>FRANCISCO ANTONIO BELEN MENDOZA</h1>
<section class="form-register">
        <h4>Datos Para El Registro Del Vehiculo </h4>
        <div class="row mt-3">
        <input class="col controls" type="text" nombre="Vehiculo" id="Vehiculo"placeholder="Ingrese el vehiculo">
        <input class="col controls" type="text" nombre="Marca" id="Marca"placeholder="Ingrese la marca">
        <input class="col controls" type="text" nombre="Modelo" id="Modelo"placeholder="Ingrese el modelo">
        </div>
        <div class="row mt-3">
            <input class="col controls" type="text" nombre="A単o" id="A単o"placeholder="Ingrese el a単o">
        <input class="col controls" type="text" nombre="Color" id="Color"placeholder="Ingrese el color">
        </div>
<div class="mt-3">
<input  class="btn btn-success"  value="Guardar">
<input  class="btn btn-warning"  value="Guardar Modificacion">
</div> 

   

</section>
<p>Rentamos y compramos vehiculos usados</p>
@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Vehiculos</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>A単o</th>
                <th>Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                   <td>@forecast.Date</td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetForecastAsync(DateTime.Now);
    }
}
